# ==================== 应用配置 ====================
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_LOG_DIR=logs
APP_AES_KEY=your-aes-key-at-least-32-bytes!
APP_MAX_UPLOAD_SIZE=10485760
APP_LLM_TIMEOUT=30
APP_LLM_MAX_RETRIES=3

# ==================== JWT 配置 ====================
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-bytes!
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==================== MySQL 配置 ====================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-secure-password-here
MYSQL_DATABASE=resume_screening
MYSQL_EXPOSE_PORT=3306
MYSQL_USE_SQLITE=false

# ==================== Redis 配置 ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_EXPOSE_PORT=6379

# ==================== MinIO 配置 ====================
MINIO_ENDPOINT=minio:9000
MINIO_CONSOLE_URL=http://localhost:9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-minio-secret-key-here
MINIO_BUCKET=resume-images
MINIO_SECURE=false
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==================== ChromaDB 配置 ====================
CHROMA_PERSIST_DIR=/app/data/chroma
CHROMA_COLLECTION=talent_resumes

# ==================== DeepSeek LLM 配置 ====================
DS_API_KEY=your-deepseek-api-key
DS_BASE_URL=https://api.deepseek.com
DS_MODEL=deepseek-chat

# ==================== DashScope Embedding 配置 ====================
DASHSCOPE_API_KEY=your-dashscope-api-key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v3

# ==================== 端口配置 ====================
FRONTEND_PORT=80
BACKEND_PORT=8000
